{
  "pluginAlias": "RatGDOESPHome",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "RatGDOESPHome",
        "type": "string",
        "required": true,
        "default": "RatGDOESPHome"
      },
      "devices": {
        "title": "Garage Doors:",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "displayName": {
              "title": "displayName",
              "type": "string",
              "default": "Garage Door",
              "minLength": 1,
              "required": true
            },
            "port": {
              "title": "Port",
              "description": "",
              "type": "number",
              "default": 80,
              "required": true
            },
            "host": {
              "title": "Host",
              "description": "ESPHome Host IP/Name",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Device Settings",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "key": "devices",
          "notitle": false,
          "type": "tabarray",
          "title": "{{ value.displayName || value.host || 'New RatGDO Device' }}",
        }
      ]
    }
  ]
}
